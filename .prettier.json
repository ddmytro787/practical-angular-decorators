{
	"printWidth": 120,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"quoteProps": "consistent",
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"arrowParens": "avoid",
	"endOfLine": "crlf",
	"proseWrap": "always",
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"tabWidth": 2,
				"singleQuote": false,
				"trailingComma": "none",
				"parser": "json"
			}
		},
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript"
			}
		},
		{
			"files": "*.js",
			"options": {
				"parser": "javascript"
			}
		},
		{
			"files": "*.html",
			"options": {
				"htmlWhitespaceSensitivity": "css",
				"singleAttributePerLine": true,
				"parser": "angular"
			}
		},
		{
			"files": "*.scss",
			"options": {
				"singleAttributePerLine": true,
				"parser": "scss"
			}
		}
	]
}
