# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
end_of_line = crlf

[*.ts]
quote_type = single

[*.json]
tab_width = 2
indent_size = 2

[*.js]
tab_width = 2
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
